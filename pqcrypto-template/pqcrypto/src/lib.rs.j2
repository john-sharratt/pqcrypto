/// Post-Quantum cryptographic primitives
///
/// Packages the [PQClean][pqclean] project as Rust crates
///
/// [pqclean]: https://github.com/PQClean/PQClean/
pub use pqcrypto_traits_wasi as traits;

pub mod prelude {
    pub use pqcrypto_traits_wasi::sign::{
        SecretKey as _,
        PublicKey as _,
        SignedMessage as _,
        DetachedSignature as _,
    };
    pub use pqcrypto_traits_wasi::kem::{
        Ciphertext as _,
        PublicKey as _,
        SecretKey as _,
        SharedSecret as _,
    };
}

pub mod kem {
    {% for kem in kems.keys() %}
    #[cfg(feature = "pqcrypto-{{kem}}-wasi")]
    pub use pqcrypto_{{ kem }}_wasi::{
        {% for scheme in kems[kem]['schemes'] %}
        {{ scheme['name']|nameize }},
        {% endfor %}
    };
    {% endfor %}
}

pub mod sign {
    {% for sign in signs.keys() %}
    #[cfg(feature = "pqcrypto-{{sign}}-wasi")]
    pub use pqcrypto_{{ sign }}_wasi::{
        {% for scheme in signs[sign]['schemes'] %}
        {{ scheme['name']|nameize }},
        {% endfor %}
    };
    {% endfor %}
}
